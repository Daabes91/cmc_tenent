# syntax=docker/dockerfile:1

ARG NUXT_PUBLIC_API_BASE
ARG NUXT_PUBLIC_SAAS_API_BASE
ARG NUXT_PUBLIC_APP_NAME
ARG NUXT_PUBLIC_APP_URL
ARG NUXT_PUBLIC_ENABLE_ANALYTICS
ARG NUXT_PUBLIC_ENABLE_AUDIT_LOGS

FROM node:20-bookworm-slim AS deps
WORKDIR /app
COPY package.json package-lock.json* ./
# Use npm install to tolerate missing or regenerated lockfiles in CI/build.
RUN npm install

FROM node:20-bookworm-slim AS builder
ARG NUXT_PUBLIC_API_BASE
ARG NUXT_PUBLIC_SAAS_API_BASE
ARG NUXT_PUBLIC_APP_NAME
ARG NUXT_PUBLIC_APP_URL
ARG NUXT_PUBLIC_ENABLE_ANALYTICS
ARG NUXT_PUBLIC_ENABLE_AUDIT_LOGS
RUN apt-get update && apt-get install -y --no-install-recommends python3 build-essential && rm -rf /var/lib/apt/lists/*
ENV NUXT_PUBLIC_API_BASE=${NUXT_PUBLIC_API_BASE}
ENV NUXT_PUBLIC_SAAS_API_BASE=${NUXT_PUBLIC_SAAS_API_BASE}
ENV NUXT_PUBLIC_APP_NAME=${NUXT_PUBLIC_APP_NAME}
ENV NUXT_PUBLIC_APP_URL=${NUXT_PUBLIC_APP_URL}
ENV NUXT_PUBLIC_ENABLE_ANALYTICS=${NUXT_PUBLIC_ENABLE_ANALYTICS}
ENV NUXT_PUBLIC_ENABLE_AUDIT_LOGS=${NUXT_PUBLIC_ENABLE_AUDIT_LOGS}
ENV NODE_OPTIONS=--max-old-space-size=4096
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . ./
RUN npm run build

FROM node:20-bookworm-slim AS runner
ARG NUXT_PUBLIC_API_BASE
ARG NUXT_PUBLIC_SAAS_API_BASE
ARG NUXT_PUBLIC_APP_NAME
ARG NUXT_PUBLIC_APP_URL
ARG NUXT_PUBLIC_ENABLE_ANALYTICS
ARG NUXT_PUBLIC_ENABLE_AUDIT_LOGS
ENV NUXT_PUBLIC_API_BASE=${NUXT_PUBLIC_API_BASE}
ENV NUXT_PUBLIC_SAAS_API_BASE=${NUXT_PUBLIC_SAAS_API_BASE}
ENV NUXT_PUBLIC_APP_NAME=${NUXT_PUBLIC_APP_NAME}
ENV NUXT_PUBLIC_APP_URL=${NUXT_PUBLIC_APP_URL}
ENV NUXT_PUBLIC_ENABLE_ANALYTICS=${NUXT_PUBLIC_ENABLE_ANALYTICS}
ENV NUXT_PUBLIC_ENABLE_AUDIT_LOGS=${NUXT_PUBLIC_ENABLE_AUDIT_LOGS}
WORKDIR /app
ENV NODE_ENV=production
ENV PORT=3002
COPY --from=builder /app/.output ./.output
EXPOSE 3002
CMD ["node", ".output/server/index.mjs"]
